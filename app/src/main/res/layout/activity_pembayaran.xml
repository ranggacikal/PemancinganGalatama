<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PembayaranActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rectangle2"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Daftar Pesanan Anda"
                android:textColor="#fff"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="Silahkan Lakukan Pembayaran\nUntuk Mendapatkan Nomer Bangku"
                android:textColor="#fff"
                android:textSize="15sp" />

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorPrimaryDark">

        <TextView
            android:layout_width="65dp"
            android:layout_height="30dp"
            android:text="Id Pemesanan"
            android:layout_marginLeft="5dp"
            android:textSize="8sp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:gravity="center"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:text="Jam Pesanan"
            android:textSize="8sp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:gravity="center"/>

        <TextView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:text="Tanggal Pesanan"
            android:textSize="8sp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:gravity="center"/>

        <TextView
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:text="Jumlah"
            android:textSize="8sp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:gravity="center"/>

        <TextView
            android:layout_width="65dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:text="Total Harga"
            android:textSize="8sp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:gravity="center"/>

    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_pemesanan_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"/>

</LinearLayout>