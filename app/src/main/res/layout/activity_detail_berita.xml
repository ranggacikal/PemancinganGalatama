<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailBeritaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_detail_berita"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@mipmap/ic_launcher"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/text_judul_detail_berita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="JUDUL BERITA"
            android:textSize="20sp"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/text_tanggal_detail_berita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tanggal Berita"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/text_isi_detail_berita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ini isi berita"
            android:layout_margin="10dp"
            android:textColor="#000"
            android:textSize="14sp"/>

    </LinearLayout>

</ScrollView>